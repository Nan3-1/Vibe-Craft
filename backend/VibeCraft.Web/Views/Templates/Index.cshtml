@model IEnumerable<VibeCraft.Models.ViewModels.TemplateViewModel>

@{
    ViewData["Title"] = ViewBag.FilterDescription ?? "Templates";
    var filter = ViewBag.CurrentFilter as VibeCraft.Models.ViewModels.TemplateFilterViewModel ?? new VibeCraft.Models.ViewModels.TemplateFilterViewModel();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Template
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filter Templates
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Search</label>
                        <input type="text" name="SearchTerm" class="form-control" value="@filter.SearchTerm" placeholder="Name, description, color..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Event Type</label>
                        <select name="EventType" class="form-select" asp-items="filter.EventTypeOptions">
                            <option value="">All</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Premium</label>
                        <select name="IsPremium" class="form-select">
                            <option value="">All</option>
                            <option value="true" selected="@(filter.IsPremium == true)">Premium</option>
                            <option value="false" selected="@(filter.IsPremium == false)">Standard</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select name="IsActive" class="form-select">
                            <option value="">All</option>
                            <option value="true" selected="@(filter.IsActive == true)">Active</option>
                            <option value="false" selected="@(filter.IsActive == false)">Inactive</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Sort By</label>
                        <select name="SortBy" class="form-select" asp-items="filter.SortOptions"></select>
                    </div>
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Apply Filters
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-eraser"></i> Clear
                        </a>
                    </div>
                </div>
                <input type="hidden" name="SortOrder" value="@filter.SortOrder" id="sortOrder" />
            </form>
        </div>
    </div>

    <!-- Quick Filter Buttons -->
    <div class="mb-3">
        <div class="btn-group" role="group">
            <a asp-action="Index" class="btn btn-outline-primary @(ViewBag.FilterDescription == null ? "active" : "")">All</a>
            <a asp-action="Active" class="btn btn-outline-success">Active</a>
            <a asp-action="Premium" class="btn btn-outline-warning">Premium</a>
            <a asp-action="ByEventType" asp-route-eventType="Wedding" class="btn btn-outline-info">Wedding</a>
            <a asp-action="ByEventType" asp-route-eventType="CorporateMeeting" class="btn btn-outline-info">Corporate</a>
            <a asp-action="ByEventType" asp-route-eventType="BirthdayParty" class="btn btn-outline-info">Birthday</a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No templates found. <a asp-action="Create">Create your first template!</a>
        </div>
    }
    else
    {
        
            }
        </div>

        <!-- Summary -->
        <div class="mt-3 text-muted">
            Showing @Model.Count() template(s)
        </div>
    }
</div>

@section Scripts {
    <script>
        // Handle sort order toggle
        document.querySelectorAll('select[name="SortBy"]').forEach(select => {
            select.addEventListener('change', function() {
                const currentOrder = document.getElementById('sortOrder').value;
                document.getElementById('sortOrder').value = currentOrder === 'asc' ? 'desc' : 'asc';
                document.getElementById('filterForm').submit();
            });
        });
    </script>
}

@functions {
    private string Truncate(string value, int maxLength)
    {
        if (string.IsNullOrEmpty(value)) return value;
        return value.Length <= maxLength ? value : value.Substring(0, maxLength) + "...";
    }
}