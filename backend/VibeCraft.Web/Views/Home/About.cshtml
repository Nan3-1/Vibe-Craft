@using VibeCraft.Web
@using VibeCraft.Web.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    ViewData["Title"] = "About Us | Vibe Craft";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style about us.css">
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/Home/About">About</a>
        <a href="/Account/Login">Profile</a>
        <a href="/Event/Create">Start your journey here</a>
    </nav>

    <section class="about-hero">
        <div class="about-text">
            <h1>Our Story</h1>
            <p>At <strong>Vibe Craft</strong>, we believe every celebration tells a story. Based on your unique vision, we bring together the colors, the atmosphere, and the details that make your event truly yours.</p>
        </div>
        <div class="about-image-container">
            <img src="~/images/Collage.png" alt="About Us Image">
        </div>
    </section>

    <section class="mission-section">
        <h2>The Vision</h2>
        <p style="font-size: 24px; font-style: italic;">"To transform ordinary spaces into extraordinary memories."</p>
        <p>Whether it's the vibrant glow of a birthday or the elegant deep tones of a wedding, our palettes are inspired by life's most beautiful moments.</p>
    </section>

    <div class="gallery-grid">
        <div class="gallery-item" onclick="openModal(0)">
            <div class="label">Wedding</div>
            <img src="~/images/wedding.jpg" alt="wedding event">
            <img src="~/images/wedding 1.jpg" alt="wedding event">
            <img src="~/images/wedding 2.jpg" alt="wedding event">
            <img src="~/images/wedding 3.jpg" alt="wedding event">
            <img src="~/images/wedding 4.jpg" alt="wedding event">
            <img src="~/images/wedding 5.jpg" alt="wedding event">
        </div>

        <div class="gallery-item" onclick="openModal(1)">
            <div class="label">Corporate Meeting</div>
            <img src="~/images/some presentation.jpg" alt="corporate event">
            <img src="~/images/corporate 1.jpg" alt="corporate event">
            <img src="~/images/corporate 2.jpg" alt="corporate event">
            <img src="~/images/corporate 3.jpg" alt="corporate event">
            <img src="~/images/corporate 4.jpg" alt="corporate event">
        </div>

        <div class="gallery-item" onclick="openModal(2)">
            <div class="label">Birthday Party</div>
            <img src="~/images/birthday.jpg" alt="birthday party">
            <img src="~/images/birthday 1.jpg" alt="birthday party">
            <img src="~/images/birthday 2.jpg" alt="birthday party">
            <img src="~/images/birthday 3.jpg" alt="birthday party">
            <img src="~/images/birthday 4.jpg" alt="birthday party">
        </div>

        <div class="gallery-item" onclick="openModal(3)">
            <div class="label">Concerts & Festivals</div>
            <img src="~/images/concerts.jpg" alt="concerts">
            <img src="~/images/concerts 1.jpg" alt="concerts">
            <img src="~/images/concerts 2.jpg" alt="concerts">
            <img src="~/images/concerts 3.jpg" alt="concerts">
            <img src="~/images/concerts 4.jpg" alt="concerts">
            <img src="~/images/concerts 5.jpg" alt="concerts">
        </div>
    </div>

    <div id="galleryModal" class="modal">
        <span class="close" onclick="closeModal()">&times;</span>
        <div class="modal-content-wrapper">
            <button class="nav-arrow prev" onclick="changeImage(-1)"><</button>
            <img id="modalImg" src="~/images/some more events.jpg" alt="Another event">
            <button class="nav-arrow next" onclick="changeImage(1)">></button>
        </div>
        <div id="modalCaption"></div>
    </div>

    <section class="values-section">
        <h2>Why Choose Us?</h2>
        <div class="values-grid">
            <div class="value-box">
                <span class="luxury-icon">✧</span>
                <h3>Vibrant Planning</h3>
                <p>We use bold colors and creative designs to ensure your party stands out from the rest.</p>
            </div>
            <div class="value-box">
                <span class="luxury-icon">✧</span>
                <h3>Reliable Coordination</h3>
                <p>Our team handles the logistics so you can focus on being present in the moment.</p>
            </div>
            <div class="value-box">
                <span class="luxury-icon">✧</span>
                <h3>Custom Templates</h3>
                <p>Access our library of ready-to-use planners for any occasion, from corporate to casual.</p>
            </div>
        </div>
        <br><br>
        <a asp-controller="Event" asp-action="Create" class="cta-button">Start Planning with Us</a>
    </section>

    <script src="~/js/script.js"></script>

</body>
</html>