@model VibeCraft.Models.ViewModels.TemplateDetailsViewModel

@{
    ViewData["Title"] = "Delete Template";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Template</h4>
                </div>
                <div class="card-body">
                    @if (Model.EventPlansCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Cannot delete this template.</strong> It is currently used by @Model.EventPlansCount event plan(s).
                            Please reassign or delete those plans before deleting this template.
                        </div>
                        
                        
                        
                        <div class="mt-4">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Details
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            Are you sure you want to delete the template "<strong>@Model.Name</strong>"? This action cannot be undone.
                        </div>

                        <dl class="row">
                            <dt class="col-sm-3">Name:</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3">Event Type:</dt>
                            <dd class="col-sm-9">@Model.ForEventType</dd>

                            <dt class="col-sm-3">Price:</dt>
                          
                        </dl>

                        <form asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Confirm Delete
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>