@model VibeCraft.Models.ViewModels.TemplateDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Templates</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                
                <div class="card-body">
                    <h2>@Model.Name</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="lead">@Model.Description</p>
                    }

                    <div class="row mt-4">
                        <div class="col-sm-6">
                            <dl class="row">
                                <dt class="col-sm-5">Event Type:</dt>
                                <dd class="col-sm-7">@Model.ForEventType</dd>


                                @if (!string.IsNullOrEmpty(Model.VibeType))
                                {
                                    <dt class="col-sm-5">Vibe Type:</dt>
                                    <dd class="col-sm-7">@Model.VibeType</dd>
                                }
                            </dl>
                        </div>
                        <div class="col-sm-6">
                            <dl class="row">
                                <dt class="col-sm-5">Base Price:</dt>
                               
                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-5">Used in:</dt>
                                <dd class="col-sm-7">@Model.EventPlansCount event(s)</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        @if (Model.IsActive)
                        {
                            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-secondary">
                                    <i class="bi bi-pause-circle"></i> Deactivate
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-play-circle"></i> Activate
                                </button>
                            </form>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        @if (Model.EventPlansCount == 0)
                        {
                            <button type="button" class="btn btn-danger float-end" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Event Plans using this template -->
            @if (Model.EventPlans != null && Model.EventPlans.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Events Using This Template (@Model.EventPlans.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Event</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <!-- Quick Stats Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Quick Stats</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Total Usage
                            <span class="badge bg-primary rounded-pill">@Model.EventPlansCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Status
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") rounded-pill">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </li>
                       
                    </ul>
                </div>
            </div>

            <!-- Preview Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Template Preview</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="display-1">
                            <i class="bi bi-file-earmark-text"></i>
                        </div>
                    </div>
                    <p class="text-center">
                        <strong>@Model.Name</strong><br />
                        <small class="text-muted">@Model.ForEventType Event Template</small>
                    </p>
                  
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal (only show if template is not in use) -->
@if (Model.EventPlansCount == 0)
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the template "<strong>@Model.Name</strong>"?</p>
                    <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}