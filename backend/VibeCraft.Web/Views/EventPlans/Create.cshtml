@model VibeCraft.Models.ViewModels.CreateEventPlanViewModel

@{
    ViewData["Title"] = "Create Event Plan";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Event Plan</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.EventTitle != null)
                    {
                        <div class="alert alert-info">
                            Creating plan for event: <strong>@ViewBag.EventTitle</strong>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="EventId" class="form-label"></label>
                            <select asp-for="EventId" class="form-select" asp-items="ViewBag.EventList" disabled="@(ViewBag.EventDropdownDisabled)">
                                <option value="">-- Select Event --</option>
                            </select>
                            <span asp-validation-for="EventId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TemplateId" class="form-label"></label>
                            <select asp-for="TemplateId" class="form-select" asp-items="ViewBag.TemplateList">
                                <option value="">-- Select Template (Optional) --</option>
                            </select>
                            <span asp-validation-for="TemplateId" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Plan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}