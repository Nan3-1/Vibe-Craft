@model VibeCraft.Models.ViewModels.EventPlanDetailsViewModel

@{
    ViewData["Title"] = "Delete Event Plan";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Event Plan</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        Are you sure you want to delete this event plan? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Event:</dt>
                        <dd class="col-sm-9">@Model.EventTitle</dd>

                        <dt class="col-sm-3">Generated:</dt>
                        <dd class="col-sm-9">@Model.GeneratedAt.ToString("MMM dd, yyyy hh:mm tt")</dd>

                       
                        @if (!string.IsNullOrEmpty(Model.TemplateName))
                        {
                            <dt class="col-sm-3">Template:</dt>
                            <dd class="col-sm-9">@Model.TemplateName</dd>
                        }
                    </dl>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>